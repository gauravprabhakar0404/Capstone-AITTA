# AITTA Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==================================================
# AITTA CORE CONFIGURATION
# ==================================================
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
API_KEY=your-secure-api-key-change-this-in-production

# ==================================================
# MOCK MODE SETTINGS (set to true for testing)
# ==================================================
USE_MOCK_JIRA=true
USE_MOCK_SPLUNK=true
USE_MOCK_CMDB=true

# ==================================================
# JIRA CONFIGURATION
# ==================================================
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token-here
JIRA_PROJECT_KEY=PROJ

# ==================================================
# SPLUNK CONFIGURATION
# ==================================================
SPLUNK_HOST=https://your-splunk-server:8089
SPLUNK_USERNAME=your-splunk-username
SPLUNK_PASSWORD=your-splunk-password
SPLUNK_TOKEN=your-splunk-hec-token
SPLUNK_HEC_URL=https://your-splunk-server:8088
SPLUNK_VERIFY_SSL=true

# ==================================================
# SERVICENOW/CMDB CONFIGURATION
# ==================================================
CMDB_BASE_URL=https://your-instance.service-now.com
CMDB_USERNAME=aitta_integration
CMDB_PASSWORD=your-servicenow-password-or-token

# ==================================================
# LLM CONFIGURATION (choose one or both)
# ==================================================
LLM_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-api-key
ANTHROPIC_API_KEY=your-claude-api-key

# ==================================================
# AGENT CONFIGURATION
# ==================================================
AGENT_LOG_TIMERANGE=30

# ==================================================
# DATABASE CONFIGURATION (optional, defaults to SQLite)
# ==================================================
DATABASE_URL=sqlite:///./aitta.db
# For PostgreSQL: postgresql://user:password@localhost/aitta

# ==================================================
# SECURITY & COMPLIANCE
# ==================================================
SECRET_KEY=your-secret-key-for-jwt-tokens
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# ==================================================
# MONITORING & LOGGING
# ==================================================
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_TO_FILE=true
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ==================================================
# PERFORMANCE TUNING
# ==================================================
MAX_WORKERS=4
REQUEST_TIMEOUT=30
BATCH_SIZE=100

# ==================================================
# NOTIFICATION SETTINGS (optional)
# ==================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_SERVER=smtp.company.com
EMAIL_FROM=aitta@company.com
